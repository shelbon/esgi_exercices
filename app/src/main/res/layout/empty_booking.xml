<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginTop="48dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/my_bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<ImageView
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/emptyBookingImage"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:src="@drawable/ic_empty"
    >
</ImageView>
    <TextView
        android:id="@+id/emptyBookingText"
        app:layout_constraintTop_toBottomOf="@+id/emptyBookingImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="@string/booking_empty"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textFontWeight="900"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/emptyBookingText"
        android:id="@+id/description"
        android:textSize="14sp"
        android:color="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet,consectetur adipisci elit, sed do elusmod" />

</androidx.constraintlayout.widget.ConstraintLayout>